@using Microsoft.AspNetCore.Identity
@inject SignInManager<Simple.Models.Entities.Identity.User> SignInManager
@inject UserManager<Simple.Models.Entities.Identity.User> UserManager

    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Home" asp-action="LoginUser">Login Again</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-primary" asp-area="" asp-controller="Home" asp-action="SignOutUser">SignOutUser</a>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li class="nav-item">
                @*<a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>*@
                <a class="nav-link text-dark" asp-controller="Home" asp-action="LoginUser">Login</a>
            </li>
        }
    </ul>
