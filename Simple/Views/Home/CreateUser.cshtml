@{
    ViewData["Title"] = "ثبت کاربر";
}

<article class="d-flex align-content-center justify-content-center align-items-center text-right">
    <article class="col-12 col-sm-10 col-xl-6">
        <article>
            <form  asp-controller="Home" asp-action="CreateUser" method="post">
                <fieldset>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-row">
                        <div class="col-12 mb-3">
                            <label class="pb-1 text-info" >پست الکترونیک</label>
                            <input name="Email"  class="form-control placeholder-rtl" placeholder="پست الکترونیک" required />
                        </div>
                        <div class="col-12 mb-3">
                            <label class="pb-1 text-info">کلمه عبور</label>
                            <input name="Password"  class="form-control placeholder-rtl" placeholder="کلمه عبور خود را وارد نمایید" required />
                        </div>
                    </div>
                    <div class="form-row mt-3">
                        <button class="w-75 btn-primary m-auto" type="submit">
                            <span class="pr-2" style="font-size: 1.3rem;">ثبت کاربر</span>
                        </button>
                    </div>
                </fieldset>
            </form>
        </article>
    </article>
</article>